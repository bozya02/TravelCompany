<Page x:Class="TravelCompany.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelCompany.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Регистрация">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Логин" Grid.Column="0" Grid.Row="0" FontSize="30"/>
        <TextBox x:Name="tbLogin" Grid.Column="1" Grid.Row="0"/>

        <TextBlock Text="Пароль" Grid.Column="0" Grid.Row="1" FontSize="30"/>
        <PasswordBox x:Name="pbPassword" Grid.Column="1" Grid.Row="1"/>

        <TextBlock Text="Повторите пароль" Grid.Column="0" Grid.Row="2" FontSize="30"/>
        <PasswordBox x:Name="pbSecondPassword" Grid.Column="1" Grid.Row="2"/>

        <Button x:Name="btnRegist" Content="Зарегистрироваться" Grid.ColumnSpan="2" Grid.Row="3" Click="btnRegist_Click"/>
    </Grid>
</Page>
