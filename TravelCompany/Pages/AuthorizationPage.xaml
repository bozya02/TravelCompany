<Page x:Class="TravelCompany.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelCompany.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Логин" Grid.Column="0" Grid.Row="0"/>
        <TextBox x:Name="tbLogin" Grid.Column="1" Grid.Row="0"/>

        <TextBlock Text="Пароль" Grid.Column="0" Grid.Row="1"/>
        <PasswordBox x:Name="tbPassword" Grid.Column="1" Grid.Row="1"/>

        <Button x:Name="btnLogin" Content="Авторизация" Grid.Column="0" Grid.Row="2" Click="btnLogin_Click"/>
        <Button x:Name="btnRegist" Content="Регистрация" Grid.Column="1" Grid.Row="2" Click="btnRegist_Click"/>
    </Grid>
</Page>
